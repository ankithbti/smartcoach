<%- model_class = Tag -%>
<div class="well-course">  
	<h4><%= link_to course.title, course %>
      	<!-- <img src="images/dmbtest.gif" width="45px" height="45px" /> -->
      	<%= link_to image_tag("#{course.image}", width: "30", height: "30")%>
    </h4>
 	<div class="clearfix">
 	</div>
  	<div class="entry-meta">
        <span class="meta-author">
        	<a href="#" title="#" rel="author"><%= course.author %></a>
        </span>
        <span class="meta-published"><%= course.created_at %></span>
        <span class="meta-categories">
        <% course.topics.each do |topic| %>
          <a href="#" title="#"><%= topic.name %></a>
            <% if course.topics.last.name == topic.name %>
            <% else %>
              <span class="cat-sep">\</span>
            <% end %>
        <% end %>
    	</span>              
  	</div>
    <p style="float:right;margin:0px;">
                  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_course_path(course), :class => 'btn btn-mini' %>
                  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    course_path(course),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-mini' %>
    </p>
  	<div class="clearfix"></div>
  	<div class="entry-wrap">
    	<div class="entry-thumbnail">
        	<a title="#" href="#">
            <!-- <img src="math.jpg" width="100" height="100"> -->
            <%= link_to image_tag("#{course.image}", border: 0, width: "100", height: "100")%>
        	</a>
    	</div><!-- end .entry-thumbnail -->
        <div class="entry-content has-post-image">
          <p class="muted"><%= course.desc %></p>
          <button class="btn btn-primary btn-success" type="button">Join to Access</button>
        </div><!-- end .entry-content -->         
  	</div>
  	<div class="clearfix"></div>
</div>