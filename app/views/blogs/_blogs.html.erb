<%- model_class = Tag -%>
<% for blog in @blogs %>
              
              <div id="blogstack">
                <div id="toppart"></div>
                <h1><%= link_to blog.title, blog %></h1>
                
                <div class="entry-meta">
                  <span class="meta-author">
                    <a href="#" title="#" rel="author"><%= blog.author %></a>
                  </span>
                  <span class="meta-published"><%= blog.created_at %></span>
                  <span class="meta-categories">
                    <% blog.tags.each do |tag| %>
                      <a href="#" title="#"><%= tag.name %></a>
                        <% if blog.tags.last.name == tag.name %>
                        <% else %>
                          <span class="cat-sep">\</span>
                        <% end %>
                    <% end %>
                  </span>
                  <p style="float:right;margin:0px;">
                  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_blog_path(blog), :class => 'btn btn-mini' %>
                  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    blog_path(blog),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-mini' %>
                </p>
                <div class="clearfix"></div>
              </div>
                <div class="clearfix"></div>

              </div>
              <div class="clearfix"></div>
              
<% end %>