<div class="row">
        <ul class="nav nav-pills .pull-right">
          <li>
            <%= link_to "Courses", courses_path %>
          </li>
          <li class="active"><%= link_to "Tutorials", tutorials_path %></li>
          <li><%= link_to "Online Classes", o_classes_path %></li>
          <li ><%= link_to "Blog", blogs_path %></li>
           <li ><%= link_to "Coaches", users_path %></li>
      </ul>
</div>
<div id="blogstack">
    <div id="toppart"></div>
    <h1><%= @tutorial.title %></h1>
    <div class="entry-meta">
	      <span class="meta-author">
	        <a href="#" title="#" rel="author"><%= @tutorial.author %></a>
	      </span>
	      <span class="meta-published"><%= @tutorial.created_at %></span>
	      <span class="meta-categories">
	        <% @tutorial.groups.each do |group| %>
	          <a href="#" title="#"><%= group.name %></a>
	            <% if @tutorial.groups.last.name == group.name %>
	            <% else %>
	              <span class="cat-sep">\</span>
	            <% end %>
	        <% end %>
	      </span>
	      <p style="float:right;margin:0px;">
		      <%= link_to 'Destroy', @tutorial, confirm: 'Are you sure?', method: :delete %> | 
		      <%= link_to "Edit", edit_tutorial_path(@tutorial) %>
	      </p>
	    <div class="clearfix"></div>
  	</div>
  	<div class="clearfix"></div>

  	<div class="alert alert-info">
  		<%= @tutorial.desc %>
	</div>
	<p style="margin:10px;"><%= link_to 'Back', tutorials_path %></p>
</div>
<div class="clearfix"></div>