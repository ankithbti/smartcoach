<% provide(:title, 'Sign in') %>

<div class="row">
        <ul class="nav nav-pills .pull-right">
          <li>
            <%= link_to "Courses", courses_path %>
          </li>
          <li><%= link_to "Tutorials", tutorials_path %></li>
          <li><%= link_to "Online Classes", o_classes_path %></li>
          <li><%= link_to "Blog", blogs_path %></li>
           <li ><%= link_to "Coaches", users_path %></li>
      </ul>
</div>

	<div class="row">
		<div class="span6 offset3">
			<div class="hero-unit">
				<p>Sign In to dive deep in knowledge!!!!</p>
				<%= form_for(:session, url: sessions_path) do |f| %>
						
					<p><%= f.label :email %>
					<%= f.text_field :email %></p>
					<p><%= f.label :password %>
					<%= f.password_field :password %></p>
					<p>
					<%= f.submit "Sign in", class: "btn btn-large btn-primary" %></p>
				<% end %>
				<p>New user? <%= link_to "Sign up now!", signup_path %></p>
			</div>
		</div>
	</div>
